    {
      "UpstreamPathTemplate": "/inventory/item/{any}",
      "UpstreamHttpMethod": [ "GET", "DELETE", "POST" ],
      "DownstreamPathTemplate": "/api/inventory/item/{any}",
      "DownstreamScheme": "http",
